<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:bottom_bar_selected"
    ohos:height="$float:bottom_bar_height"
    ohos:width="match_parent"
    ohos:background_element="$color:primary_color"
    ohos:visibility="hide"
    ohos:orientation="horizontal">

    <!-- 下载 -->
    <DirectionalLayout
        ohos:id="$+id:bnav_item_download"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:orientation="vertical"
        ohos:weight="1">

        <Image
            ohos:id="$+id:bnav_item_download_img"
            ohos:image_src="$media:bnav_item_download"
            ohos:height="$float:bnav_image_height"
            ohos:width="$float:bnav_image_width"
            ohos:alpha="0.9"
            ohos:scale_x="1"
            ohos:scale_y="1" />

        <Text
            ohos:id="$+id:bnav_item_download_txt"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.95"
            ohos:text_size="$float:bottom_item_text_size"
            ohos:text_color="white"
            ohos:text="$string:bnav_item_download" />

    </DirectionalLayout>


    <!-- 分享 -->
    <DirectionalLayout
        ohos:id="$+id:bnav_item_share"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:orientation="vertical"
        ohos:weight="1">

        <Image
            ohos:id="$+id:bnav_item_share_img"
            ohos:image_src="$media:bnav_item_share"
            ohos:height="$float:bnav_image_height"
            ohos:width="$float:bnav_image_width"
            ohos:alpha="0.9"
            ohos:scale_x="1"
            ohos:scale_y="1" />

        <Text
            ohos:id="$+id:bnav_item_share_txt"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.95"
            ohos:text_size="$float:bottom_item_text_size"
            ohos:text_color="white"
            ohos:text="$string:bnav_item_share" />

    </DirectionalLayout>


    <!-- 删除 -->
    <DirectionalLayout
        ohos:id="$+id:bnav_item_delete"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:orientation="vertical"
        ohos:weight="1">

        <Image
            ohos:id="$+id:bnav_item_delete_img"
            ohos:image_src="$media:bnav_item_delete"
            ohos:height="$float:bnav_image_height"
            ohos:width="$float:bnav_image_width"
            ohos:alpha="0.9"
            ohos:scale_x="1"
            ohos:scale_y="1" />

        <Text
            ohos:id="$+id:bnav_item_delete_txt"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.95"
            ohos:text_size="$float:bottom_item_text_size"
            ohos:text_color="white"
            ohos:text="$string:bnav_item_delete" />

    </DirectionalLayout>


    <!-- 重命名 -->
    <DirectionalLayout
        ohos:id="$+id:bnav_item_rename"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:orientation="vertical"
        ohos:weight="1">

        <Image
            ohos:id="$+id:bnav_item_rename_img"
            ohos:image_src="$media:bnav_item_rename"
            ohos:height="$float:bnav_image_height"
            ohos:width="$float:bnav_image_width"
            ohos:alpha="0.9"
            ohos:scale_x="1"
            ohos:scale_y="1" />

        <Text
            ohos:id="$+id:bnav_item_rename_txt"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.95"
            ohos:text_size="$float:bottom_item_text_size"
            ohos:text_color="white"
            ohos:text="$string:bnav_item_rename" />

    </DirectionalLayout>


</DirectionalLayout>