<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:background_element="$graphic:background_white_radius_10"
    ohos:top_padding="20vp"
    ohos:bottom_padding="0vp"
    ohos:left_margin="24vp"
    ohos:right_margin="24vp"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:layout_top"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_top="true"
        ohos:horizontal_center="true">

        <Text
            ohos:id="$+id:title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:vertical_center="true"
            ohos:horizontal_center="true"
            ohos:text_size="18fp"
            ohos:text_color="black"
            ohos:text_weight="700"
            ohos:text="$string:rename" />

    </DependentLayout>

    <DirectionalLayout
        ohos:id="$+id:layout_center"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:horizontal_center="true"
        ohos:below="$id:layout_top"
        ohos:top_margin="10vp"
        ohos:right_padding="20vp"
        ohos:left_padding="20vp"
        ohos:orientation="horizontal">

        <TextField
            ohos:id="$+id:input_new_name"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:background_element="#F9F9F9"
            ohos:text_size="16fp"
            ohos:padding="10vp"
            ohos:hint="$string:input_new_name" />

    </DirectionalLayout>

    <Component
        ohos:id="$+id:divider"
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:top_margin="20vp"
        ohos:alpha="0.3"
        ohos:background_element="$graphic:item_divider"
        ohos:below="$id:layout_center"/>

    <DirectionalLayout
        ohos:id="$+id:layout_bottom"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_padding="0vp"
        ohos:below="$id:divider"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:cancel"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:min_height="44vp"
            ohos:weight="1"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:text="$string:cancel" />

        <Component
            ohos:height="match_parent"
            ohos:width="1vp"
            ohos:alpha="0.3"
            ohos:background_element="$graphic:item_divider" />

        <Text
            ohos:id="$+id:rename"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:min_height="44vp"
            ohos:weight="1"
            ohos:text_alignment="center"
            ohos:text_size="16fp"
            ohos:text_color="$color:primary_color"
            ohos:text="$string:rename" />

    </DirectionalLayout>
</DependentLayout>